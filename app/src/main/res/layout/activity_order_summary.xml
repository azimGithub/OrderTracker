<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/order_summary_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Order Summary"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

    <LinearLayout
        android:id="@+id/order_summary"
        android:layout_below="@+id/order_summary_title"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/custmBallTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cust Bal:"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/customBalSumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="4dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/discTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Disc:"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/discSumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/codeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Code:"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/codeValTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="977"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="4dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/amtWithVatTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amt with Vat:"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/amtWithVatSumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/dateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/dateValTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingLeft="4dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/netAmtTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net Amt:"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/netAmtValTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingLeft="4dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/vatTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vat Amt:"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/vatValTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/storeName"
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/netInvTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net Invoice Amt:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp16"/>
                <TextView
                    android:id="@+id/netAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="560"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="4dp"
                    android:textSize="@dimen/sp16"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/dp5"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:textColor="@color/colorPrimary"
                android:text="Code/Desc"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="Total Qty"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="@dimen/dp5"
                android:textColor="@color/colorPrimary"
                android:text="Total Value"/>

        </LinearLayout>


    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/order_summary"
        android:layout_above="@+id/footer">
    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/qty_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Qty:"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/qtyCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/qty_tv"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/colorAccent"
            android:text="70"/>
        <TextView
            android:id="@+id/hash_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="180dp"
            android:text="#:"
            android:textColor="@color/colorAccent"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/hash_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"
            android:textColor="@color/colorAccent"
            android:paddingLeft="4dp"
            android:layout_toRightOf="@+id/hash_tv"
            android:gravity="center_vertical"/>
        <Button
            android:id="@+id/ivNxt"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/dp5"
            android:text="@string/save"
            android:textSize="@dimen/sp16"
            android:background="@color/colorAccent"
            android:textColor="@color/colorPrimary"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>
